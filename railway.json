{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./Dockerfile",
    "watchPatterns": [
      "requirements.txt",
      "main.py",
      "tracker.py",
      "Dockerfile",
      "railway.json"
    ]
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "startupTimeout": 300,
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  }
}
